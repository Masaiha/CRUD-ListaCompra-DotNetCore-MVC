@model Masanori.com.App.ViewModels.EmpresaViewComponent

@{
    ViewData["Title"] = "Editar Empresa - " + Model.Nome;
}

<h4 class="">@ViewData["Title"]</h4>
<hr />
<div class="row col-md-12">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-row">
            <div class="form-group col-md-10">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
                <br />
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-warning" asp-action="Index">Voltar</a>
            </div>
        </div>
    </form>

    @*<div id="EnderecoTarget">
        <partial name="_DetalhesEndereco" />
    </div>*@

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
