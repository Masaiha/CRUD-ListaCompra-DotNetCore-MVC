@model Masanori.com.App.ViewModels.CompraViewComponent

@{
    ViewData["Title"] = "Editar nome da Compra " + Model.Nome;
}

<h4 style="padding-top: 20px">@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Mudar Para: </label>
                <input asp-for="Nome" class="form-control" value=""/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-warning" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
